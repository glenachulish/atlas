"layers": [
  {
    "id": "poi",
    "name": { "en": "Point of Interest" },
    "source": { "osmTags": "node", "geometry": "point" },
    "title": { "en": "{name}" },
    "allowAdd": true,
    "allowMove": true,

    "pointRendering": [
      {
        "location": ["point"],
        "icon": "https://glenachulish.github.io/atlas/icons/atlas_castle.svg",
        "label": "{name}"
      }
    ],
    "lineRendering": [
      { "color": "#00000000", "width": 0 }
    ],
    "areaRendering": [
      { "fillColor": "#00000000", "strokeColor": "#00000000", "strokeWidth": 0 }
    ],

    "tagRenderings": [
      {
        "id": "poi-name",
        "question": { "en": "What is this place called?" },
        "freeform": { "key": "name" },
        "render": { "en": "Name: {name}" }
      },
      {
        "id": "poi-description",
        "question": { "en": "Add a short description" },
        "freeform": { "key": "description" },
        "render": { "en": "Description: {description}" }
      },
      {
        "id": "poi-photo",
        "question": { "en": "Add a photo" },
        "freeform": { "key": "image" },
        "render": { "en": "Photo: {image}" }
      },
      {
        "id": "poi-url",
        "question": { "en": "Add a website URL" },
        "freeform": { "key": "website" },
        "render": { "en": "Website: {website}" }
      },
      {
        "id": "poi-tags",
        "question": { "en": "Add tags (e.g. geology, nature)" },
        "freeform": { "key": "tags" },
        "render": { "en": "Tags: {tags}" }
      }
    ]
  }
]
