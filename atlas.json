{
  "id": "new-feature",
  "name": { "en": "Add a Feature" },
  "source": { "osmTags": "id=-1", "geometry": "point" },
  "allowAdd": true,
  "allowMove": true,
  "pointRendering": [
    { "location": ["point"], "icon": "circle", "label": "{name}" }
  ],
  "lineRendering": [ { "color": "#00000000", "width": 0 } ],
  "areaRendering": [ { "fillColor": "#00000000", "strokeColor": "#00000000", "strokeWidth": 0 } ],
  "tagRenderings": [
    {
      "id": "new-feature-category",
      "question": "Which category does this belong to?",
      "mappings": [
        { "if": "theme=geology", "then": "Geology" },
        { "if": "theme=nature", "then": "Nature" },
        { "if": "theme=social", "then": "Social History" },
        { "if": "theme=infrastructure", "then": "Infrastructure" }
      ],
      "render": "Category: {theme}"
    },
    {
      "id": "new-feature-name",
      "question": "Name?",
      "freeform": { "key": "name" },
      "render": "Name: {name}"
    },
    {
      "id": "new-feature-note",
      "question": "Any notes?",
      "freeform": { "key": "note" },
      "render": "Note: {note}"
    }
  ]
}
