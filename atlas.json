{
  "id": "atlas-test",
  "title": { "en": "Atlas Points of Interest" },
  "description": { "en": "Add points of interest with name, short description, photos, websites, tags, and an optional long description page." },
  "welcomeMessage": { "en": "ðŸ‘‹ Tap + to add a point of interest." },
  "icon": "https://glenachulish.github.io/atlas/icons/person-planet.svg",
  "startWithLayer": "poi",

  "backgroundLayers": [
    {
      "id": "osm-default",
      "name": { "en": "OpenStreetMap" },
      "url": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png",
      "attribution": "Â© OpenStreetMap contributors",
      "maxZoom": 19
    }
  ],

  "layers": [
    {
      "id": "poi",
      "name": { "en": "Point of Interest" },
      "source": { "osmTags": "atlas_poi=yes", "geometry": "point" },
      "title": { "en": "{name}" },
      "allowAdd": true,
      "allowMove": true,

      "pointRendering": [
        {
          "location": ["point"],
          "icon": "{_first_image_thumbnail}",
          "iconSize": "40,40",
          "anchor": "center",
          "label": "{name}"
        },
        {
          "location": ["point"],
          "icon": "https://glenachulish.github.io/atlas/icons/person-planet.svg",
          "iconSize": "40,40",
          "anchor": "center",
          "label": "{name}",
          "condition": "_first_image_thumbnail="
        }
      ],

      "tagRenderings": [
        {
          "id": "poi-name",
          "question": { "en": "What is this place called?" },
          "freeform": { "key": "name" },
          "render": { "en": "<strong>Name:</strong> {name}" }
        },
        {
          "id": "poi-description",
          "question": { "en": "Short description" },
          "freeform": { "key": "description", "type": "text" },
          "render": { "en": "<strong>Description:</strong><br/>{description}" }
        },
        {
          "id": "long-description-url",
          "question": { "en": "Full description page URL" },
          "freeform": { "key": "long_description_url" },
          "render": { "en": "<strong>Full description:</strong> <a href='{long_description_url}' target='_blank' rel='noopener'>open</a>" }
        },
        { "builtin": "images" },
        {
          "id": "poi-wikimedia",
          "question": { "en": "Add Wikimedia Commons file names" },
          "freeform": { "key": "wikimedia_commons" },
          "render": { "en": "<strong>Wikimedia Commons:</strong> {wikimedia_commons}" }
        },
        {
          "id": "poi-url",
          "question": { "en": "Add a website URL" },
          "freeform": { "key": "website" },
          "render": { "en": "<strong>Website:</strong> <a href='{website}' target='_blank' rel='noopener'>{website}</a>" }
        },
        {
          "id": "poi-url-2",
          "question": { "en": "Add another website URL" },
          "freeform": { "key": "contact:website" },
          "render": { "en": "<strong>Website 2:</strong> <a href='{contact:website}' target='_blank' rel='noopener'>{contact:website}</a>" },
          "condition": "website~*"
        },
        {
          "id": "poi-url-3",
          "question": { "en": "Add another website URL" },
          "freeform": { "key": "url" },
          "render": { "en": "<strong>Website 3:</strong> <a href='{url}' target='_blank' rel='noopener'>{url}</a>" },
          "condition": "contact:website~*"
        },
        {
          "id": "poi-url-4",
          "question": { "en": "Add another website URL" },
          "freeform": { "key": "source:url" },
          "render": { "en": "<strong>Website 4:</strong> <a href='{source:url}' target='_blank' rel='noopener'>{source:url}</a>" },
          "condition": "url~*"
        },
        {
          "id": "poi-url-5",
          "question": { "en": "Add another website URL" },
          "freeform": { "key": "ref:url" },
          "render": { "en": "<strong>Website 5:</strong> <a href='{ref:url}' target='_blank' rel='noopener'>{ref:url}</a>" },
          "condition": "source:url~*"
        },
        {
          "id": "poi-tags",
          "question": { "en": "Add tags (e.g. geology, nature)" },
          "freeform": { "key": "tags" },
          "render": { "en": "<strong>Tags:</strong> {tags}" }
        }
      ],

      "presets": [
        {
          "title": { "en": "Add Point of Interest" },
          "tags": ["atlas_poi=yes", "name="],
          "description": { "en": "Add a new point of interest to the map" }
        }
      ]
    }
  ]
}
