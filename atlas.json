{
  "id": "atlas",
  "title": { "en": "Atlas of People and Place" },
  "description": { 
    "en": "üëã **Welcome to the Atlas of People and Place!**\n\n‚û°Ô∏è [**Click here for contributor guidance**](https://your.link.here)\n\nTap **+** to add a feature. Log in to contribute." 
  },
  "icon": "https://glenachulish.github.io/atlas/icons/atlas_castle.svg",
  "startWithLayer": "new-feature",

  "backgroundLayers": [
    {
      "id": "os-road",
      "name": { "en": "OS Road Map" },
      "url": "https://api.os.uk/maps/raster/v1/zxy/Road_27700/{z}/{x}/{y}.png?key=9UBIqO49tAyzDUMZwd10lAGLJ4bVHWTn",
      "attribution": "Contains OS data ¬© Crown copyright and database rights 2025",
      "maxZoom": 20
    },
    {
      "id": "osm-default",
      "name": { "en": "OpenStreetMap" },
      "url": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png",
      "attribution": "¬© OpenStreetMap contributors",
      "maxZoom": 19
    }
  ],

  "layers": [
    {
      "id": "new-feature",
      "name": { "en": "Add a Feature" },
      "source": { "osmTags": "theme~*", "geometry": "point" },
      "title": { "en": "{name}" },
      "allowAdd": true,
      "allowMove": true,
      "pointRendering": [
        {
          "location": ["point"],
          "icon": "https://glenachulish.github.io/atlas/icons/atlas_castle.svg",
          "label": "{name}"
        }
      ],
      "lineRendering": [
        { "color": "#00000000", "width": 0 }
      ],
      "areaRendering": [
        { "fillColor": "#00000000", "strokeColor": "#00000000", "strokeWidth": 0 }
      ],
      "tagRenderings": [
        {
          "question": "Which category does this belong to?",
          "mappings": [
            { "if": "theme=geology", "then": "Geology" },
            { "if": "theme=nature", "then": "Nature" },
            { "if": "theme=social", "then": "Social History" },
            { "if": "theme=infrastructure", "then": "Infrastructure" }
          ]
        },
        {
          "question": "What is this called?",
          "freeform": { "key": "name" },
          "render": "Name: {name}"
        },
        {
          "question": "Any notes?",
          "freeform": { "key": "note" },
          "render": "Note: {note}"
        }
      ]
    },
    {
      "id": "geology",
      "name": { "en": "Geology" },
      "source": { "osmTags": "theme=geology", "geometry": "point" },
      "title": "{name}",
      "allowMove": true,
      "pointRendering": [
        {
          "location": ["point"],
          "icon": "https://glenachulish.github.io/atlas/icons/atlas_rock.svg",
          "label": "{name}"
        }
      ],
      "lineRendering": [
        { "color": "#00000000", "width": 0 }
      ],
      "areaRendering": [
        { "fillColor": "#00000000", "strokeColor": "#00000000", "strokeWidth": 0 }
      ],
      "tagRenderings": [
        {
          "question": "Describe the geology",
          "freeform": { "key": "geological" },
          "render": "Geology: {geological}"
        }
      ]
    },
    {
      "id": "nature",
      "name": { "en": "Nature" },
      "source": { "osmTags": "theme=nature", "geometry": "point" },
      "title": "{name}",
      "allowMove": true,
      "pointRendering": [
        {
          "location": ["point"],
          "icon": "https://glenachulish.github.io/atlas/icons/atlas_tree.svg",
          "label": "{name}"
        }
      ],
      "lineRendering": [
        { "color": "#00000000", "width": 0 }
      ],
      "areaRendering": [
        { "fillColor": "#00000000", "strokeColor": "#00000000", "strokeWidth": 0 }
      ],
      "tagRenderings": [
        {
          "question": "What natural feature is this?",
          "freeform": { "key": "natural" },
          "render": "Nature: {natural}"
        }
      ]
    },
    {
      "id": "social-history",
      "name": { "en": "Social History" },
      "source": { "osmTags": "theme=social", "geometry": "point" },
      "title": "{name}",
      "allowMove": true,
      "pointRendering": [
        {
          "location": ["point"],
          "icon": "https://glenachulish.github.io/atlas/icons/atlas_people.svg",
          "label": "{name}"
        }
      ],
      "lineRendering": [
        { "color": "#00000000", "width": 0 }
      ],
      "areaRendering": [
        { "fillColor": "#00000000", "strokeColor": "#00000000", "strokeWidth": 0 }
      ],
      "tagRenderings": [
        {
          "question": "What is the social or historical significance?",
          "freeform": { "key": "historic" },
          "render": "History: {historic}"
        }
      ]
    },
    {
      "id": "infrastructure",
      "name": { "en": "Infrastructure" },
      "source": { "osmTags": "theme=infrastructure", "geometry": "point" },
      "title": "{name}",
      "allowMove": true,
      "pointRendering": [
        {
          "location": ["point"],
          "icon": "https://glenachulish.github.io/atlas/icons/atlas_bridge.svg",
          "label": "{name}"
        }
      ],
      "lineRendering": [
        { "color": "#00000000", "width": 0 }
      ],
      "areaRendering": [
        { "fillColor": "#00000000", "strokeColor": "#00000000", "strokeWidth": 0 }
      ],
      "tagRenderings": [
        {
          "question": "What type of infrastructure is this?",
          "freeform": { "key": "infrastructure" },
          "render": "Infrastructure: {infrastructure}"
        }
      ]
    }
  ]
}
